<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:radioButton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <RelativeLayout
        android:id="@+id/layout_common"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <cn.piaofun.common.ui.PFViewPager
            android:id="@+id/viewpager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="49dip" >
        </cn.piaofun.common.ui.PFViewPager>

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-50dip"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/view_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:contentDescription="@string/app_name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dip"
            android:layout_alignParentBottom="true"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#a9a9a9"
                />


            <cn.piaofun.common.ui.CustomRadioGroup
                android:id="@+id/radiogroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="horizontal" >

                <cn.piaofun.common.ui.CustomRadioButton
                    android:id="@+id/radioButtonOne"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="5dip"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center_horizontal"
                    android:paddingTop="3dip"
                    radioButton:rbChecked="true"
                    radioButton:rbDrawableGravity="top"
                    radioButton:rbDrawableHeight="22dip"
                    radioButton:rbDrawableWidth="22dip"
                    radioButton:rbText="约票"
                    radioButton:rbTextSize="11sp" />

                <cn.piaofun.common.ui.CustomRadioButton
                    android:id="@+id/radioButtonTwo"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="5dip"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center_horizontal"
                    android:paddingTop="3dip"
                    radioButton:rbDrawableGravity="top"
                    radioButton:rbDrawableHeight="22dip"
                    radioButton:rbDrawableWidth="22dip"
                    radioButton:rbText="淘票"
                    radioButton:rbTextSize="11sp" />

                <cn.piaofun.common.ui.CustomRadioButton
                    android:id="@+id/radioButtonFive"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="5dip"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center_horizontal"
                    android:paddingTop="3dip"
                    radioButton:rbDrawableGravity="top"
                    radioButton:rbDrawableHeight="22dip"
                    radioButton:rbDrawableWidth="22dip"
                    radioButton:rbText="权证"
                    radioButton:rbTextSize="11sp" />

                <cn.piaofun.common.ui.CustomRadioButton
                    android:id="@+id/radioButtonThree"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="5dip"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center_horizontal"
                    android:paddingTop="3dip"
                    radioButton:rbDrawableGravity="top"
                    radioButton:rbDrawableHeight="22dip"
                    radioButton:rbDrawableWidth="22dip"
                    radioButton:rbText="订单"
                    radioButton:rbTextSize="11sp" />

                <cn.piaofun.common.ui.CustomRadioButton
                    android:id="@+id/radioButtonFour"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="5dip"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center_horizontal"
                    android:paddingTop="3dip"
                    radioButton:rbDrawableGravity="top"
                    radioButton:rbDrawableHeight="22dip"
                    radioButton:rbDrawableWidth="22dip"
                    radioButton:rbText="我的"
                    radioButton:rbTextSize="11sp"
                    />
            </cn.piaofun.common.ui.CustomRadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dip"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="4"
            >
            <View
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="2"
                />
            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <cn.piaofun.common.ui.AdjustTextView
                    android:id="@+id/tv_tip_push"
                    android:layout_width="8dip"
                    android:layout_height="8dip"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="33dip"
                    android:layout_marginTop="4dip"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="11sp"
                    />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
</merge>