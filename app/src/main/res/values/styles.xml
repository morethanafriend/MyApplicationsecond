<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AnimationActivity" mce_bogus="1" parent="@style/AppTheme">
        <item name="android:activityOpenEnterAnimation">@anim/open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/open_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/close_exit</item>
    </style>

    <style name="ActivityTheme" mce_bogus="1" parent="@style/AnimationActivity">
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:clipToPadding">true</item>
    </style>

    <style name="ThemeStart" parent="@style/AnimationActivity">
        <item name="android:windowBackground">@mipmap/launch_bg</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="DialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <!--除去title-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <!--除去背景色-->
    </style>

    <style name="FullScreenDialogTheme" parent="DialogTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BaseTextStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/common_text_size</item>
    </style>

    <style name="TextSmallStyle">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">@dimen/common_text_size_small</item>
    </style>

    <style name="TextBigStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/common_text_size_big</item>
    </style>

    <style name="BaseEditStyle">


        <item name="android:textSize">14sp</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>

    </style>

    <style name="BaseButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/single_line_edit_height</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>

        <item name="android:stateListAnimator" tools:ignore="NewApi">@null</item>
    </style>

    <style name="RectButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/single_line_edit_height</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>

        <item name="android:stateListAnimator" tools:ignore="NewApi">@null</item>
    </style>

    <style name="MeArrowStyle">
        <item name="android:layout_width">15dip</item>
        <item name="android:layout_height">15dip</item>
        <item name="android:src">@mipmap/me_arrow</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>


    <style name="mine_iv_base_style">
        <item name="android:layout_width">24dip</item>
        <item name="android:layout_height">24dip</item>
        <item name="android:layout_marginBottom">13dip</item>
        <item name="android:layout_marginTop">13dip</item>
        <item name="android:layout_marginLeft">15dip</item>
    </style>

    <style name="mine_text_base_style">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">6dip</item>
        <item name="android:layout_weight">1</item>

        <item name="android:textSize">@dimen/common_text_size</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="MyRatingbar" parent="@android:style/Widget.RatingBar">

        <item name="android:minHeight">10dp</item>
        <item name="android:maxHeight">20dp</item>
        <item name="android:indeterminateOnly">false</item>

        <item name="android:thumb">@null</item>
        <item name="android:isIndicator">true</item>
    </style>
    <style name="Evaluate" parent="@android:style/Widget.RatingBar">

        <item name="android:minHeight">57dip</item>
        <item name="android:maxHeight">57dip</item>

        <item name="android:thumb">@null</item>
    </style>
    <style name="orderbasestyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:layout_height">44dip</item>

    </style>

    <style name="timepopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/timepicker_anim_enter_bottom</item> <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/timepicker_anim_exit_bottom</item> <!-- 指定消失的动画xml -->
    </style>


    <style name="transparent_activity">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="dialog_activity">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="dialog_no_extrbg" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item><!-- 背景图片 -->
    </style>

    <style name="BaseButtonStyle_with_draw" parent="@android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">28dip</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>

        <item name="android:stateListAnimator" tools:ignore="NewApi">@null</item>
    </style>
</resources>
